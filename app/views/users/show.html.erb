<% provide(:title, @user.name) %>
<nav class="breadcrumbs z-depth-1" style="z-index: -1; background-color: rgba(227,242,253,.5); height: 20px; border-radius: 0px; margin-top: -20px;">
  <a href="/">Teams</a>
   <a class="unavailable" href="/"><%= @user.name %></a>
</nav>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class ="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Team Posts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>